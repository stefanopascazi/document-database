{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ document.title }}</td>
            </tr>
            <tr>
                <th>Filepath</th>
                <td>{{ document.filepath }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ document.filename }}</td>
            </tr>
            <tr>
                <th>Extension</th>
                <td>{{ document.extension }}</td>
            </tr>
            <tr>
                <th>Parsed</th>
                <td>{{ document.parsed }}</td>
            </tr>
            <tr>
                <th>Ocr</th>
                <td>{{ document.ocr }}</td>
            </tr>
            <tr>
                <th>Excerpt</th>
                <td>{{ document.excerpt }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ document.description }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ document.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_document_index') }}">back to list</a>

    <a href="{{ path('app_document_edit', {'id': document.id}) }}">edit</a>

    {{ include('document/_delete_form.html.twig') }}
{% endblock %}
